  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://ns.adobe.com/xdm/assets/task-container",
  "type": "object",
  "title": "Task container",
  "description": "A task container is a list of tasks and its sub-tasks. It is similar to the data model for a Directory.",
  "meta:extends": [
      "http://ns.adobe.com/adobecloud/core/1.0#/definitions/common-properties",
      "http://ns.adobe.com/adobecloud/core/1.0#/definitions/date-properties",
      "https://ns.adobe.com/xdm/external/hal/resource#/definitions/hal"
