          "properties": {
              "http://ns.adobe.com/adobecloud/rel/primary": {
                  "$ref": "https://ns.adobe.com/xdm/assets/usertask"
              }
          }
      },
      "embeddedObject": {
          "properties": {
              "_embedded": {
                  "$ref": "#/definitions/primaryEmbeddedObject"
              }
          }
      },
      "container": {
          "properties": {
              "dc:format": {
                  "type": "string",
                  "title": "Format",
                  "const": "application/vnd.adobe.tasks+json"
              },
              "_page": {
                  "$ref": "https://ns.adobe.com/xdm/common/page",
                  "description": "Page info, included if this resource is part of paginated result."
              },
              "children": {
                  "type": "array",
                  "items": {
                      "allOf": [
                          {
                              "$ref": "http://ns.adobe.com/adobecloud/core/1.0/asset"
